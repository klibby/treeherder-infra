{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-west-2",
            "source_ami": "ami-f18bd0c1-b9471c89",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "treeherder_worker_ubuntu__{{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "bootstrap.sh",
            "execute_command": "sudo -E sh '{{ .Path }}'"
        }
    ]
}
